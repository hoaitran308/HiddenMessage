@page "/show"

<div class="alert alert-info">
    <label for="image">Hình ảnh:</label><br />
    <InputFile id="image" OnChange="@OnFileChangedAsync" /><hr />
    @if (!string.IsNullOrEmpty(imageEncodedURL))
    {
        <img src="@imageEncodedURL" /><hr />
    }

    @if (string.IsNullOrEmpty(hiddenMessage))
    {
        <button class="btn btn-primary" @onclick="OnClickGetHiddenMessage">Lấy thông điệp</button>
    }
    else
    {
        <b>Thông điệp:</b> <span style="color:red">@hiddenMessage</span>
    }
</div>

